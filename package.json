{
  "name": "evan-lang",
  "version": "0.0.1",
  "description": "A vaguely Lispy language in the context of JavaScript.",
  "repository": {
    "type": "git",
    "url": "https://github.com/dslmeinte/evan-lang.git"
  },
  "bin": {
    "evan": "lib/bin/cmd.js"
  },
  "scripts": {
    "postinstall": "mkdir -p test/evaluation/actual",
    "build-meta": "node src/meta/build-meta.js",
    "build-ts": "tsc",
    "prebuild-ts": "npm run build-meta",
    "build": "npm run bundle-ide && npm run bundle-embed",
    "prebuild": "npm run build-ts",
    "test": "node dist/test/eval-programs.js && diff --recursive test/evaluation/actual/ test/evaluation/expected/",
    "pretest": "npm run build-ts && cp src/meta/meta-model.json dist/meta/",
    "start": "npm run start-ide",
    "start-ide": "http-server -p 8031 src/ide/web",
    "prestart-ide": "npm run build",
    "bundle-ide": "browserify src/ide/index.tsx -p [ tsify ] -o src/ide/web/bundle.js",
    "watch-ide": "watchify src/ide/index.tsx -p [ tsify ] -o src/ide/web/bundle.js -v",
    "start-embed": "http-server -p 8032 src/embed-in-browser/web",
    "prestart-embed": "npm run build",
    "bundle-embed": "browserify src/embed-in-browser/index.tsx -p [ tsify ] -o src/embed-in-browser/web/bundle.js",
    "watch-embed": "watchify src/embed-in-browser/index.tsx -p [ tsify ] -o src/embed-in-browser/web/bundle.js -v",
    "clean": "rimraf ide/editor/type-widgets/*.tsx_gen && rimraf test/evaluation/actual && rimraf dist && rimraf node_modules && rm src/ide/web/bundle.js && rm src/embed-in-browser/web/bundle.js"
  },
  "author": "Meinte Boersma",
  "license": "MIT",
  "dependencies": {
    "@types/lodash": "^4.14.44",
    "@types/node": "^6.0.52",
    "@types/react": "^0.14.55",
    "@types/react-dom": "^0.14.19",
    "indent-string": "^3.0.0",
    "is-integer": "^1.0.6",
    "lodash": "^4.16.1",
    "mobx": "^2.6.1",
    "mobx-react": "^3.5.6",
    "react": "^15.3.2",
    "react-dom": "^15.3.2"
  },
  "devDependencies": {
    "browserify": "^13.1.0",
    "camelcase": "^3.0.0",
    "http-server": "^0.9.0",
    "rimraf": "^2.5.4",
    "tsify": "^1.0.7",
    "typescript": "^2.1.4",
    "watchify": "^3.7.0"
  }
}
