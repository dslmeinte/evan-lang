{
    "version": "2.0.3",
    "compilerOptions": {
        "declaration": false,
        "experimentalDecorators": true,
        "jsx": "react",
        "module": "commonjs",
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
        "outDir": "dist/",
		"suppressImplicitAnyIndexErrors": true,
		"strictNullChecks": true,
        "target": "es5"
    },
    "filesGlob": [
        "./core/**/*.ts",
        "./test/**/*.ts",
        "!./node_modules/**/*.ts"
    ]
}
