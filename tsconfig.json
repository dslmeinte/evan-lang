{
    "version": "2.1.4",
    "compilerOptions": {
        "declaration": true,
        "module": "commonjs",
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": false,
        "outDir": "lib",
		"suppressImplicitAnyIndexErrors": true,
		"strictNullChecks": true,
        "target": "es5"
    },
    "files": [
		"src/index.ts",
		"src/bin/cmd.ts"
    ]
}